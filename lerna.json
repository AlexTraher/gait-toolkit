{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "version": {
      "ignoreChanges": ["**/*.md", "**/*.test.*", "test-subjects/**"]
    },
    "publish": {
      "ignoreChanges": ["**/*.md", "**/*.test.*", "test-subjects/**"],
      "conventionalCommits": true,
      "message": "chore: publish",
      "allowBranch": "main"
    }
  }
}
